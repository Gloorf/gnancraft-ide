#!/bin/bash

set -ex

if [[ "$1" == help ]] ; then
  echo "usage: $(basename $0) [-c config] [dev|stop|help] [dockers args]"
  exit 0
fi

. $(dirname $0)/default.conf

RCFILE=~/.gnancraftrc
[[ -e "$RCFILE" ]] && . $RCFILE

if [[ "$1" == -c ]] ; then
  shift
  source $1
  shift
fi

COMMON_ARGS="--detach=true --name=${ide_container} -p 127.0.0.1:${ide_port}:5000 --volumes-from ${data_container} -e SRCDIR=/data/scriptcraft/players -e SECRET=secret gnancraft-ide"

if [[ "$1" == dev ]] ; then
  ARGS="-v $(perl -MCwd=realpath -e "print realpath '$PWD'"):/usr/src/app -e DEBUG=y"
  shift
fi

if $(docker ps -a | grep "\b${ide_container} *$" >/dev/null) ; then
  docker stop $ide_container
  docker rm -v $ide_container
fi

if [[ "$1" != stop ]] ; then
  docker run $ARGS $COMMON_ARGS $@
fi

